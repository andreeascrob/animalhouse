<div id="book" class="flex flex-col gap-4 p-4 max-w-screen-lg mx-auto">
	<div class="flex flex-row justify-between">
		<h1 class="text-3xl font-bold"></h1>
    <button type="modify-booking" class="flex flex-row gap-2 rounded p-4 bg-emerald-500 dark:bg-emerald-800 justify-center items-center w-52 hover:font-bold">
					<span> Modifica prenotazione<span>
		</button>
		<button id="delete-booking" class="flex flex-row gap-2 rounded p-1 bg-red-500 dark:bg-red-800 justify-center items-center w-40 hover:font-bold hidden" onclick="deleteBook()">
			<img class="dark:invert" src="/icons/trash.svg" width="20">
			<span>Elimina prenotazione</span>
		</button>
	</div>
  <script>
  fetch('/api/bookings')

	function modifyBook(bookingId, data) {
		fetch('/api/bookings' + bookingId, {
			method: 'PATCH',
			headers: {
				'Accept': 'application/json',
				'Content-Type': 'application/json',
				'Authorization': `Bearer ${localStorage.token}`
			},
			body: JSON.stringify(data),
		})
			.then((response) => {
				if (response.ok) {
					window.location.reload();
				}
			})
			.catch((error) => {
				console.error('Error:', error);
			});
	}

    	function deleteBook(bookingId) {
		fetch('/api/bookings' + bookingId, {
			method: 'DELETE',
			headers: {
				'Accept': 'application/json',
				'Content-Type': 'application/json',
				'Authorization': `Bearer ${localStorage.token}`
			}
		})
			.then((response) => {
				if (response.ok) {
					window.location.reload();
				}
			})
			.catch((error) => {
				console.error('Error:', error);
			});
	}
</script>
